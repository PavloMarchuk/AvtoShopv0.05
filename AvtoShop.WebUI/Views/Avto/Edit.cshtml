@model AvtoShop.DataLayer.DbLayer.Avto

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Avto</h4>
<hr />
<div class="container-fluid">
    <div class="row">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AvtoId" />
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="UserName" class="control-label"></label>
				@*<label  class="control-label">@User.Identity.Name</label>*@
                <input asp-for="UserName" class="form-control" disabled value="@User.Identity.Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
				<label  class="control-label">Brand</label>
                <select id="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="ModelAvtoId" class="text-danger"></span>
            </div>
            <!-- Заменить при выборе брэнда -->
            <div class="form-group col-xs-12 col-md-4 col-lg-3 " id="ModelAvto">
                <label asp-for="ModelAvtoId" class="control-label"></label>
                
                <select asp-for="ModelAvtoId" class="form-control" asp-items="ViewBag.ModelAvtoId"></select>
                
                <span asp-validation-for="ModelAvtoId" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="AutoBodyId" class="control-label"></label>
                <select asp-for="AutoBodyId" class="form-control" asp-items="ViewBag.AutoBodyId"></select>
                <span asp-validation-for="AutoBodyId" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="YearAvto" class="control-label"></label>
                <input asp-for="YearAvto" class="form-control" />
                <span asp-validation-for="YearAvto" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="Engine" class="control-label"></label>
                <input asp-for="Engine" class="form-control" />
                <span asp-validation-for="Engine" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="FuelId" class="control-label"></label>
                <select asp-for="FuelId" class="form-control" asp-items="ViewBag.FuelId"></select>
                <span asp-validation-for="FuelId" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="KPPId" class="control-label"></label>
                <select asp-for="KPPId" class="form-control" asp-items="ViewBag.KPPId"></select>
                <span asp-validation-for="KPPId" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="DriveUnitId" class="control-label"></label>
                <select asp-for="DriveUnitId" class="form-control" asp-items="ViewBag.DriveUnitId"></select>
                <span asp-validation-for="DriveUnitId" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-4 col-lg-3 ">
                <label asp-for="StateAvto" class="control-label"></label>
                <input asp-for="StateAvto" class="form-control" />
                <span asp-validation-for="StateAvto" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-12 col-lg-12 ">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-12 col-lg-12 ">
                <label asp-for="Remark" class="control-label"></label>
                <input asp-for="Remark" class="form-control" />
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group col-xs-12 col-md-12 col-lg-12">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="~/js/datevalidate.js"></script>

    <script type="text/javascript">

        $(function () {
            var id = $('#ModelAvtoId').val();
            if (id == 0) $('#ModelAvtoId').attr('disabled', 'true');
            else $('#ModelAvtoId').attr('disabled', 'false');
		
            $('#BrandId').change(function () {
                $('#ModelAvto').empty();
                $('#ModelAvto').load('/Avto/GetModelAvtoPartView/?BrandId=' + $('#BrandId').val());
                //$('#ModelAvtoId').attr('disabled', 'false');
            });
        });
    </script>

}


